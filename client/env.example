# ========================================
# LICITADOR INTELIGENTE - Variáveis de Ambiente
# ========================================

# ----------------------------------------
# Banco de Dados (MySQL)
# ----------------------------------------
DATABASE_URL="mysql://usuario:senha@localhost:3306/licitador_inteligente"

# Exemplo para produção:
# DATABASE_URL="mysql://user:pass@db.example.com:3306/licitador"

# ----------------------------------------
# Sessão e Segurança
# ----------------------------------------
SESSION_SECRET="GERE_UM_SECRET_ALEATORIO_COM_MINIMO_32_CARACTERES_AQUI"

# Para gerar um secret seguro, use:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# ----------------------------------------
# Manus OAuth (Autenticação)
# ----------------------------------------
MANUS_CLIENT_ID="seu_client_id_aqui"
MANUS_CLIENT_SECRET="seu_client_secret_aqui"
MANUS_REDIRECT_URI="http://localhost:5000/auth/callback"

# Para produção:
# MANUS_REDIRECT_URI="https://seudominio.com/auth/callback"

# ----------------------------------------
# APIs Externas
# ----------------------------------------

# ReceitaWS - Busca de CNPJ
RECEITAWS_API_URL="https://receitaws.com.br/v1"

# Alternativa: BrasilAPI
# BRASILAPI_URL="https://brasilapi.com.br/api"

# ----------------------------------------
# AWS S3 (Upload de Arquivos)
# ----------------------------------------
S3_BUCKET="nome-do-seu-bucket"
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID="sua_access_key_aqui"
S3_SECRET_ACCESS_KEY="sua_secret_key_aqui"

# Ou use Cloudflare R2, DigitalOcean Spaces, etc.

# ----------------------------------------
# IA para Análise de Editais (Opcional)
# ----------------------------------------

# Anthropic Claude
ANTHROPIC_API_KEY="sk-ant-api03-..."

# OpenAI GPT
# OPENAI_API_KEY="sk-..."

# ----------------------------------------
# Email (Alertas de Documentos - Opcional)
# ----------------------------------------
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="seu_email@gmail.com"
SMTP_PASS="sua_senha_ou_app_password"

# ----------------------------------------
# Ambiente
# ----------------------------------------
NODE_ENV="development"
# Valores possíveis: development | production | test

PORT="5000"

# ----------------------------------------
# URLs
# ----------------------------------------
FRONTEND_URL="http://localhost:5173"
BACKEND_URL="http://localhost:5000"

# Para produção:
# FRONTEND_URL="https://seudominio.com"
# BACKEND_URL="https://api.seudominio.com"

# ----------------------------------------
# Logs e Debug
# ----------------------------------------
LOG_LEVEL="info"
# Valores: error | warn | info | debug

DEBUG="false"
# true para modo debug com logs detalhados
